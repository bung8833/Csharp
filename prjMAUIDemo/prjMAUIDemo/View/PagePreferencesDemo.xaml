<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prjMAUIDemo.View.PagePreferencesDemo"
             Title="PagePreferencesDemo">
    <StackLayout
        Orientation="Vertical">
        
        <Label 
            Text="Preferences使用範例"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="請輸入資料"
            FontSize="25"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Entry 
            x:Name="txtSet"
            Text="---"
            FontSize="25"
            VerticalOptions="Start"
            HorizontalOptions="Start"/>
        <Button
            Clicked="btnSaveClicked"
            Text="Save"
            FontSize="25"
            VerticalOptions="Start"
            HorizontalOptions="Start"/>
        <Button
            Clicked="btnReadClicked"
            Text="Read"
            FontSize="25"
            VerticalOptions="Start"
            HorizontalOptions="Start"/>
        <Label
            x:Name="lblGet"
            Text="---"
            FontSize="25"
            VerticalOptions="Start"
            HorizontalOptions="Start"/>

    </StackLayout>
</ContentPage>